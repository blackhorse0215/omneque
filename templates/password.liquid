{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}

{% layout 'password' %}

{% unless shop.password_message == blank %}
  <p class="type-body-regular">
    {{ shop.password_message }}
  </p>
{% endunless %}

{% form 'customer' %}
  <p class="type-body-small coming-soon-copy"><strong>Expect us to be fashionably late</strong></p> 	
  {{ form.errors | default_errors }}

  {% if form.posted_successfully? %}
    <div class="form-success pt1 mt4">
      <h4 class="type-heading-4 form-success__heading">Thank you for registering</h4>
      <p class="type-body-small mb4">{{ 'general.password_page.signup_form_success' | t }}</p>
    </div>
  {% else %}
    <input type="hidden" name="contact[tags]" value="prospect, password page">
    <label for="email">
      {{ 'general.password_page.signup_form_email_label' | t }}
    </label>
    <div class="form__inputWrapper">
      <input type="email"
        name="contact[email]"
        class="input-reset input"
        id="Email"
        spellcheck="false"
        autocomplete="off"
        autocapitalize="off"
        placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
      <input type="submit" class="bttn" value="Submit">
    </div>
  {% endif %}
{% endform %}

{% if settings.share_facebook or settings.share_twitter %}
  <div class="password__sharing">
    <h6 class="type-heading-6 type-alt-signpost">{{ 'general.password_page.spread_the_word' | t }}</h6>
    {% include 'social-sharing' %}
  </div>
{% endif %}
