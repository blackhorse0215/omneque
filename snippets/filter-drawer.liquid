<div class="drawer filter-flyout" data-component="filterDrawer">
  <div class="filter-flyout__header">
    <h4 class="ma0">{{ 'collections.general.filter' | t }}</h4>
    <a href="#" data-filters-close>
      {% render 'icon' with icon: 'close' %}
    </a>
  </div>
  {% comment %}
  	{% render 'filter-menu' %}
  {% endcomment %}

<div class="filter-flyout__filters hide" data-filters>

  </div>

  <div class="filter-flyout__bottom hide">

    <button class="bttn bttn--full bttn--small" data-apply-filters>
      {{ 'collections.general.apply' | t }}
    </button>
</div>

</div>