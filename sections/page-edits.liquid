            </div>
          </div>
            <div class="sbc-list">
            {% for block in section.blocks %}
                <div class="sbc-item">
                    <div class="sbc-box">
                      {% if block.settings.collection_url != blank %}
                            <a href="{{ block.settings.collection_url }}">
                      {% endif %} 
                      {% if block.settings.image != blank %}
                      <div class="sbc-img" 
                           style="background-image:url({{ block.settings.image | img_url:'450x' }})">
                      </div>
                      {% endif %}
                      {% if block.settings.title_text != blank %}
                        <h4>{{ block.settings.title_text }}</h4>
                      {% endif %}
                      {% if block.settings.collection_url != blank %}
                        </a>
                      {% endif %} 
                  </div>
                </div>
            {% endfor %}
            </div>
        </div>
  </div>
  {% schema %}
    {
      "name": "Edits",
      "max_blocks": 30,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Edits"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub text"
        }
      ],
      "blocks": [
        {
          "type": "text",
          "name": "Edits item",
          "settings": [
            {
              "type":"image_picker",
              "id": "image",
              "label":"collection image"
            },
            {
              "type":"text",
              "id": "title_text",
              "label":"collection text"
            },
            {
              "type": "url",
              "id": "collection_url",
              "label":"Select collection link"
            }	
          ]
        }
      ]
    }
  {% endschema %}