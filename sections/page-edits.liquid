<div class="shop-by-category-header edits-header">
    <div class="shop-by-category-header-txt">
      <div class="shop-by-category-header-txt-inner">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p>{{ section.settings.subtitle }}</p>
      {% endif %}
      <a href="meet-the-curators" class="uppercase edits_link">Meet the Curators</a>
      </div>
    </div>
    <div class="shop-by-category-header-img">
      <img src="{{ 'edits_banner.jpg' | asset_url }}"/>
    </div>
    <div class="shop-by-category-header-img-mobile"> 
      <img src="{{ 'edits_banner_mobile.jpg' | asset_url }}"/>
    </div>
  </div>
  <div class="shop-by-category edits-content">
