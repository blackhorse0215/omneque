<section
  data-section-id="{{ section.id }}"
  data-section-type="quote-text"
  class="section section-quote-text"
>
  <div class="quote-columns">
    {% if section.settings.bkgnd_image != blank %}
        <img src = "{{section.settings.bkgnd_image | img_url: 'master'}}" class = "quote-bkgnd-image">
    {% endif %}
    {% if section.settings.bkgnd_image_mobile != blank %}
        <img src = "{{section.settings.bkgnd_image_mobile | img_url: 'master'}}" class = "quote-bkgnd-image-mobile">
    {% endif %}
    <div class="quote-columns__content">
      {% for block in section.blocks %}
        <div class="quote-columns__feature quote-columns__feature--{{ section.blocks.size }}">
          
          {%- if block.settings.title != blank -%}
            <h3 class="quote_heading">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.subheading != blank -%}
            <p class="quote_text">{{ block.settings.subheading }}</p>
          {%- endif -%}
          {%- if block.settings.link != blank and block.settings.link_text != blank -%}
            <a href="{{ block.settings.link }}" class="type-body-regular accent-link db mt3">{{ block.settings.link_text }} &rarr;</a>
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% if section.settings.bkgnd_image != blank %}
    <style>
        .section.section-quote-text{
            width: 100%;
            max-width:100vw;
            /* background-image: url("{{section.settings.bkgnd_image | img_url: 'master'}}"); */
        }
    </style>
{% endif %}

{% schema %}
  {
    "name": "Quote Text",
    "settings": [
      {
        "type": "image_picker",
        "id": "bkgnd_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "bkgnd_image_mobile",
        "label": "Mobile Background Image"
      }
    ],
    "max_blocks": 2,
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Quote Text",
        "category": "Text"
      }
    ]
  }
{% endschema %}
