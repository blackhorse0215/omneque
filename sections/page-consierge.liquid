          "label":"Email Address"
		},
		{
          "type":"text",
          "id":"whatsup",
          "label":"Whatsup number"
		}
	],
    
	"blocks":[
	  {
		"name":"category item",
		"type":"text",
		"settings": [
			{
              "type":"image_picker",
              "id":"category_img",
              "label":"Category image"
            },
			{
              "type":"text",
              "id":"category_title",
              "label":"Category title"
            },
            {
              "type":"richtext",
              "id":"category_text",
              "label":"Category text"
            }
         ]
	  }
	]
  }
