<section class="section tc mv6">
	<div class="heading">
  {%- if section.settings.title != blank -%}
    <h2 class="type-heading-1 home-rich-title">{{ section.settings.title | escape }}</h2>
  {%- endif -%}

  {%- if section.settings.text != blank -%}
    <div class="type-body-large rte center measure-wide">
      {{ section.settings.text }}
    </div>
  {%- endif -%}

  {%- if section.settings.link != blank and section.settings.link_text != blank -%}
    <div class="rte__link center">
      <a class="bttn" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
    </div>
  {%- endif -%}
  </div>
</section>

{% schema %}
  {
    "name": "Rich text",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default":"This is the Rich text section"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text area to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      }
    ],
    "presets": [{
        "name": "Rich text",
        "category": "Text"
    }]
  }
{% endschema %}
