{% render 'stonebar-featured-collection' with
  type: 'stonebar-featured-collection',
  featured_collection: section.settings.collection,
  heading_alignment: section.settings.heading_alignment,
  title: section.settings.title,
  collection_subheading: section.settings.collection_subheading,
  link_text: section.settings.link_text,
  products_per_row: section.settings.products_per_row,
  rows: section.settings.rows,
%}

{% schema %}
  {
    "name": "Stone Featured collection",
    "settings": [
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "textarea",
        "id": "collection_subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "select",
        "id": "heading_alignment",
        "label": "Heading alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "range",
        "id": "products_per_row",
        "label": "Products per row",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "rows",
        "label": "Rows",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 1
      },
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "checkbox",
        "id": "outline",
        "label": "Outline section",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Stone Featured collection",
        "category": "Collection",
        "settings": {
          "collection_subheading": "Add a subheading to provide more details about this collection."
        }
      }
    ]
  }
{% endschema %}
